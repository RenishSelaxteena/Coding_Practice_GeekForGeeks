// User function Template for Java
https://www.geeksforgeeks.org/problems/count-digits5716/1
class Solution {
    static int evenlyDivides(int n) { //12
    int count = 0;
    String input = String.valueOf(n); //'12'
    for(int i=0;i<input.length();i++){ 
        int d = input.charAt(i) - '0'; // 1
        if( d != 0 && n % d == 0) { //12%1 == 0
            count++; // 0+1
        }else{
            continue;
        }
    }
    return count;
        
    }
}
